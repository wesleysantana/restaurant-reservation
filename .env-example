# API environment
ASPNETCORE_ENVIRONMENT=Development

# Initial admin user (used by IdentitySeeder) - change if desired
ADMIN_EMAIL=admin@restaurant.com
ADMIN_PASSWORD=Admin@123
ADMIN_ROLE=Admin

# Postgres database (Docker: use host 'db' from docker-compose service name)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=reservas
POSTGRES_HOST=db
POSTGRES_PORT=5432

# JWT settings (ASP.NET Core maps '__' to ':')
JwtOptions__Issuer=Iss-ReservationRestaurant
JwtOptions__Audience=Aud-ReservationRestaurant
JwtOptions__SecurityKey=dev-only-change-me-to-a-long-random-string
JwtOptions__AccessTokenExpirationInMinutes=20
JwtOptions__RefreshTokenExpirationInMinutes=60
